           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <service id="klipper_api.body_listener" class="Klipper\Bundle\ApiBundle\Listener\BodyListener">
            <tag name="kernel.event_listener" event="kernel.request" method="onKernelRequest" priority="11" />
            <argument type="service" id="klipper_api.request_matcher" />
        </service>
    </services>
</container>
